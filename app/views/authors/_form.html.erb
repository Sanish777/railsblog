    <%= form.label :phone, style: "display: block" %>
    <%= form.number_field :phone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :facebook, style: "display: block" %>
    <%= form.text_field :facebook, class: "form-control" %>
